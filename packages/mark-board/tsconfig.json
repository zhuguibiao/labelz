{
  "extends": "@labelz/typescript-config/base.json",
  "compilerOptions": {
    "module": "ES2015",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "ES2015",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
